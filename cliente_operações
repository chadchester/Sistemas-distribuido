#clienteOperacoes

import socket  
import pickle
HOST = 'localhost'
PORT = 8888


class Operacoes:
	def __init__(self,ip):
		self.ip =ip 
	
	def fatorial(self,n):
		tcp = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
		dest = (self.ip,PORT)
		tcp.connect(dest)
		print'conectado ao servidor'
		tcp.send('fatorial ' + n)
		resp = tcp.recv(1024)
		tcp.close()
		print ' conexao com o servidor encerrada \n'
		return int(resp)
		
	
	def soma(self,n1,n2):
		tcp = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
		dest = (self.ip,PORT)
		tcp.connect(dest)
		print'conectado ao servidor'
		tcp.send('soma ' + n1 + ' ' + n2)
		resp = tcp.recv(1024)
		tcp.close()
		return int(resp)
		print 'Conexao com o servidor encerrada'
		
		
		
	def produto(self, n1, n2):
		tcp = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
		dest= (self.ip, PORT)
		tcp.connect(dest)
		print'conectando ao servidor'
		tcp.send('produto ' + n1 + ' ' + n2)
		resp = tcp.recv(1024)
		tcp.close()
		return int(resp)
		print'Conexao com o servidor encerrada'

	def pessoa(self):
		tcp = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
		dest= (self.ip, PORT)
		tcp.connect(dest)
		print'Conectando ao servidor\n'
		tcp.send('pessoa x')
		resp = tcp.recv(1024)
		tcp.close()
		return pickle.loads(resp)
		
	

	
op = Operacoes(HOST)
while True :
	oper = raw_input('informe operacao e valor ')  
	separa = oper.split()
	if separa[0] == 'fatorial':
		print op.fatorial(separa[1])
	elif separa[0] == 'soma':
		print op.soma(separa[1],separa[2])
	elif separa[0] == 'produto':
		print op.produto(separa[1],separa[2])
	else:
		p = op.pessoa()
		print p.nome
		
		

